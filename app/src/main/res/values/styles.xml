<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppCompat" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.AppCompat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.AppCompat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="StandardButton">
        <item name="android:background">@drawable/satandard_button_rounded</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="LinkText" parent="Text">
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>